<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="scrollBox"
        messagesPack="com.ragenotes.blacklist.web.screens.blacklistentry">
    <data>
        <instance id="blackListEntryDc"
                  class="com.ragenotes.blacklist.entity.entries.BlackListEntry"
                  view="blackListEntry-full">
            <loader/>
            <collection id="contactsDc" property="contacts"/>
            <collection id="playerIpsDc" property="playerIps"/>
            <collection id="historiesDc" property="histories"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="blackListEntryDc">
                <column width="250px">
                    <textField id="nickNameField" property="nickName"/>
                    <textField id="fullNameField" property="fullName"/>
                    <textField id="firstNameField" property="firstName"/>
                    <textField id="secondNameField" property="secondName"/>
                    <textField id="lastNameField" property="lastName"/>
                    <textField id="codeField" property="code" editable="false"/>
                    <textArea id="descriptionField" property="description" width="500px" height="250px"/>
                    <textField id="voterField" property="voter" editable="false"/>
                    <lookupField id="statusField" property="status" required="true"/>
                </column>
            </form>
            <groupBox id="contactsBox" caption="msg://com.ragenotes.blacklist.entity.entries/BlackListEntry.contacts">
                <table id="contactsTable" dataContainer="contactsDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <columns>
                        <column id="value"/>
                        <column id="type"/>
                        <column id="code"/>
                        <column id="description"/>
                    </columns>
                    <buttonsPanel>
                        <button action="contactsTable.add"/>
                        <button action="contactsTable.exclude"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="playerIpsBox" caption="msg://com.ragenotes.blacklist.entity.entries/BlackListEntry.playerIps">
                <table id="playerIpsTable" dataContainer="playerIpsDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <columns>
                        <column id="ip"/>
                        <column id="code"/>
                        <column id="fixationDate"/>
                        <column id="description"/>
                    </columns>
                    <buttonsPanel>
                        <button action="playerIpsTable.add"/>
                        <button action="playerIpsTable.exclude"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="historiesBox" caption="msg://com.ragenotes.blacklist.entity.entries/BlackListEntry.histories">
                <table id="historiesTable" dataContainer="historiesDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="code"/>
                        <column id="description"/>
                        <column id="date"/>
                    </columns>
                    <buttonsPanel>
                        <button action="historiesTable.add"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
