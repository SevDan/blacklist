<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.ragenotes.blacklist.web.screens.acceptorprofile">
    <data>
        <instance id="acceptorProfileDc"
                  class="com.ragenotes.blacklist.entity.profiles.AcceptorProfile"
                  view="acceptorProfile-full">
            <loader/>
            <collection id="contactsDc" property="contacts"/>
            <collection id="acceptedEntriesDc" property="acceptedEntries"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="acceptorProfileDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="codeField" property="code" required="false"/>
                <pickerField id="userField" property="user">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <groupBox id="contactsBox" caption="msg://com.ragenotes.blacklist.entity.profiles/AcceptorProfile.contacts">
            <table id="contactsTable" dataContainer="contactsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="value"/>
                    <column id="type"/>
                    <column id="description"/>
                </columns>
                <buttonsPanel>
                    <button action="contactsTable.add"/>
                    <button action="contactsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="acceptedEntriesBox"
                  caption="msg://com.ragenotes.blacklist.entity.profiles/AcceptorProfile.acceptedEntries">
            <table id="acceptedEntriesTable" dataContainer="acceptedEntriesDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="nickName"/>
                    <column id="fullName"/>
                    <column id="firstName"/>
                    <column id="secondName"/>
                    <column id="lastName"/>
                    <column id="code"/>
                    <column id="description"/>
                    <column id="status"/>
                </columns>
                <buttonsPanel>
                    <button action="acceptedEntriesTable.add"/>
                    <button action="acceptedEntriesTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
